<div class="contents row">
  <div class="container">
    <h3>体重登録</h3>
    <%= form_with(model: @user_info, local: true) do |form| %>
      <%= form.text_field :weight, placeholder: "weight" %>
      <%= form.text_field :height, placeholder: "height" %>
      <%= form.text_field :date, placeholder: "date" %>
      <%= form.submit "投稿" %>
    <% end %>
  </div>
</div>